@model IEnumerable<SortWasteVictoria_WebApp.Models.Bin>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BinColour)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BinInfo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BinColour)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BinInfo)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.BinId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.BinId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.BinId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
